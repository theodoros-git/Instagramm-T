<div class="container mb-8">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Profile</h1>
                </div>
                <div class="card-body text-center">
                     
                     <p id="notice"><%= notice %></p>
                    <p>
                      <img
                        src="<%= @user.image %>"
                        class="img-fluid rounded-circle"
                        alt=""
                        style="height: 150px; width: 150px; margin-top: 30px;"
                      />
                    </p>
                    <p>
                      <strong>Name:</strong>
                      <%= @user.name %>
                    </p>

                    <p>
                      <strong>Email:</strong>
                      <%= @user.email %>
                    </p>
                    <%= link_to 'Edit', edit_user_path(@user) %> |
                    <%= link_to 'Back', users_path %><br><br>
                    <%= link_to 'New Publication', new_publication_path %> ||
                    <%= link_to 'All Publication', publications_path %>
                 </div>
                 <div class="card-footer"></div>
             </div>
         </div>
         <div class="col-md-4"></div>
    </div>
</div>
