<p id="notice"><%= notice %></p>
<div class="text-center">
  <h1>Publications</h1>
</div>

<div style="margin-top: 50px;">
<% @publications.each do |publication| %>
  
<div class="row">
  <div class="col-md-2">
    
  </div>

  <div class="col-md-7 mb-3">
      <div class="card mb-3">

    <p class="card-text mt-3">
        &nbsp;&nbsp;&nbsp;
      <i class="fas fa-user"></i>
        &nbsp;
        <% @users.each do |usere| %>
          <% if publication.user_id == usere.id %>
              <%= usere.name %>
          <% end %>
        <% end %>
        </p>
        <div class="card-body">
          <img
            src="<%= publication.image %>"
            class="card-img-top"
            alt="..."
          />
        </div>
        <div class="text-center">
          <%= publication.content %><br>
        </div><br>
        <div class="card-footer"></div>
          <div class="flex text-center">
            <% if publication.user_id == @current_user.id %>
            <%= link_to 'Show', publication %>||
            <%= link_to 'Edit', edit_publication_path(publication) %> ||
            <%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            <%= link_to 'Show', publication %>
          <% end %>
          </div>
    <div class="card-body">
      
      <p class="card-text text-center" style="margin-top: -15px;">
       
      <div class="row">
        <div class="col-6 ">
          <p class="card-text">
            <small class="text-muted">Publi√© le <%= publication.created_at %></small>
          </p>
          <br>
          
        </div>
        
      </div>

    </div> 
</div>
  </div>

  <div class="col-md-2">
      
  </div>

</div>

<% end %>

</div>
<div class="text-center mb-5">
  <%= link_to 'New Publication', new_publication_path %>
</div>