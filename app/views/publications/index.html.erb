<p id="notice"><%= notice %></p>

<h1>Publications</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td>
        <%= publication.user.name %><br>
        <img
        src="<%= publication.image %>"
        class="img-fluid rounded-circle"
        alt=""
        style="height: 330px; width: 500px; margin-top: 30px;"
      /><br><br>
      <h4>Content</h4>
      <%= publication.content %><br> 
      <% if publication.user_id == current_user.id %>
          <%= link_to 'Show', publication %>||
          <%= link_to 'Edit', edit_publication_path(publication) %> ||
          <%= link_to 'Destroy', publication, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else %>
          <%= link_to 'Show', publication %>
        <% end %>
      </td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Publication', new_publication_path %>
