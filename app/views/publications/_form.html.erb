<div class="container mb-2">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center mt-5">
                    
                </div>
                <div class="card-body">
                     
                    <%= form_with(model: @publication, local: true ,url: choose_new_or_edit ) do |form| %>
                    <% if publication.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

                        <ul>
                          <% publication.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <div class="field">
                      <%= form.file_field :image %>
                      <%= form.hidden_field :image_cache %>
                    </div><br>

                    <div class="field">
                      <%= form.label :content %><br>
                      <%= form.text_area :content %>
                    </div><br>

                    <div class="actions">
                      <%= form.submit %>
                    </div>
                    <% end %>
                 </div>
                 <div class="card-footer text-center mb-5">
                   <%= link_to 'Back', publications_path %>
                 </div>
             </div>
         </div>
         <div class="col-md-4"></div>
    </div>
</div>