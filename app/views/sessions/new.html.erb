<div class="container mb-8">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header text-center">
                    <h1>Log in</h1>
                </div>
                <div class="card-body">
                     
                     <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %> 
                        <%= f.label :email %> 
                            <%= f.email_field :email %><br><br><br>
                        <%= f.label :password %> 
                            <%= f.password_field :password %> <br><br><br>
                        <div class="text-center">
                            <%= f.submit "Log in" %> 
                        </div>
                     <% end %>
                 </div>
                 <div class="card-footer"></div>
             </div>
         </div>
         <div class="col-md-4"></div>
    </div>
</div>
